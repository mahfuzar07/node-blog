<%- include('../../partials/header.ejs') %>

<div class="container my-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card card-body">
                <div>
                    <h4 class="text-center"> Author Profile</h4>
                    <img src="<%= author.profilePics %>" class="img-thumbnail img-fluid">
                </div>
                <div class="my-4">
                    <p>Name: <strong> <%= author.profile.name %> </strong></p>
                    <p>Title: <strong> <%= author.profile.title %> </strong></p>
                    <p>Bio: <%= author.profile.bio %> </p>

                    <div>
                        Social Links: 
                        <% if (author.profile.links.website) { %>
                            <span>
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fab fa-internet-explorer"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.facebook) { %>
                            <span>
                                <a href="<%= author.profile.links.facebook %>" target="_blank">
                                    <i class="fab fa-facebook-square"></i>
                                </a>
                            </span>
                        <% } %>
                       
                        <% if (author.profile.links.github) { %>
                            <span>
                                <a href="<%= author.profile.links.github %>" target="_blank">
                                    <i class="fab fa-github-square"></i>
                                </a>
                            </span>
                        <% } %>
                    </div>
                </div>

                <div>
                    <h4 class="text-center">Post Created By This Author</h4>
                    <div class="row offset-md-0">
                             <% if (author.profile.posts.length === 0) { %>
                                <div class="text-center text-muted">
                                    <p>There is no posts available right now</p>
                                    <a href="/posts/create" class="btn btn-primary btn-sm"> Create Post Now </a>
                                </div>
                            <% } else { %>
                                <% for (let post of author.profile.posts.reverse()) { %>
                                    <div class="card col-sm-5 mx-4 my-2 ">
                                        <% if (post.thumbnail) { %>
                                            <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-2">
                                        <% } %>
                                        <div class=" p-0 text-center">
                                            <a href="/explorer/<%= post._id %>" class="card-link">
                                                <p class="mt-2"><%= post.title %></p>
                                            </a>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                  
                          
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>