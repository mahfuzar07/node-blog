<%- include("../../partials/header.ejs") %>
<div class="container my-container my-4">
  <div class="row">
      <div class="col-md-6 offset-md-3">
          <div class="card card-body bg-light">
            <h4 class="mb-4 text-center"> Login Your Account</h4>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                  <label class="mb-2" for="email">Email</label>
                  <input type="email" name="email" class="form-control mb-2 <%= error.email ? "is-invalid" : ""  %>">
                  <div class="invalid-feedback"><%= error.email && error.email  %> </div>
              </div>
              <div class="form-group">
                  <label class="mb-2" for="password">Password</label>
                  <input type="password" name="password" class="form-control mb-2 <%= error.password ? "is-invalid" : ""  %>">
                  <div class="invalid-feedback"><%= error.password && error.password  %> </div>
              </div>
             
            <input type="submit" class="btn btn-primary mt-2" value="Login">
         
            </form>
          </div>
      </div>

  </div>
</div>
<%- include("../../partials/footer.ejs") %> 
</body>
</html>