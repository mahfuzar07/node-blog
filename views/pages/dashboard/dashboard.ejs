<%- include("../../partials/header.ejs") %>
<div class="container-fluid">

    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">

         <div class="card card-body m-4 bg-light" >
           
            <div class="mb-5">
                <h4 class="mb-3 text-center">My Recently Created Posts</h4>
              <div class="row  ">
                            <% if (posts.length === 0) { %>
                                <div class="text-center text-muted">
                                    <p>There is no posts available right now</p>
                                </div>
                            <% } else { %>
                                <% for (let post of posts) { %>
                                    <div class="card  col-sm-3 ">
                                        <% if (post.thumbnail) { %>
                                            <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-2">
                                        <% } %>
                                        <div class="p-0 text-center ">
                                  <a href="/explorer/<%= post._id %>" class="card-link">
                                     <p class="mt-2"><%= post.title %></p>
                                </a>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                 </div>
              </div>
        
             
             <div class="mb-4">
                <h4 class=" mb-3 text-center">My Recently Created Bookmarks</h4>
              <div class="row">
                    <% if (bookmarks.length === 0) { %>
                    <div class="text-center text-muted">
                        <p>There is no posts available right now</p>
                         </div>
                         <% } else { %>
                         <% for (let post of bookmarks) { %>
                         <div class="card  col-sm-3">
                         <% if (post.thumbnail) { %>
                          <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-2">
                            <% } %>
                           <div class=" p-0 text-center">
                             <a href="/explorer/<%= post._id %>" class="card-link" >
                             <p class="mt-2"><%= post.title %></p>
                              </a>
                              </div>
                            </div>

                            <% } %>
                            <% } %>
                </div>
              </div>


        </div>



   
        </div>


    </div>
</div>
<%- include("../../partials/footer.ejs") %>

</body>
</html>